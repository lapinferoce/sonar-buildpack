#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2
BUILD_PACK_DIR= $(dirname $(dirname $0 ))

set -e
set -o pipefail

cd $BUILD_DIR

gcc app.c -o app

echo "Creating start script"
cat > "$BUILD_DIR/start.sh" << EOF
#!/bin/bash
# Starts C Application Server
echo " Starts C Application Server "
echo " @ port $PORT"
/home/vcap/app/app
EOF

chmod 755 . "$BUILD_DIR/start.sh"
